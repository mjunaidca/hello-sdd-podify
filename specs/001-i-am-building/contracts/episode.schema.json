{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://hello-a-podcast.com/schemas/episode.json",
    "title": "Episode",
    "description": "Schema for podcast episode data",
    "type": "object",
    "properties": {
        "number": {
            "description": "Episode number",
            "type": "integer",
            "minimum": 1
        },
        "title": {
            "description": "Episode title",
            "type": "string",
            "minLength": 1,
            "maxLength": 120
        },
        "description": {
            "description": "Episode description",
            "type": "string",
            "minLength": 1,
            "maxLength": 5000
        },
        "duration": {
            "description": "Episode duration (mm:ss or ISO 8601)",
            "type": "string",
            "pattern": "^(?:[0-5]?[0-9]:[0-5][0-9]|PT(?:[0-9]+H)?(?:[0-9]+M)?[0-9]+S)$"
        },
        "publishDate": {
            "description": "Episode publish date (YYYY-MM-DD)",
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "coverImageUrl": {
            "description": "Episode cover image URL",
            "type": "string",
            "format": "uri"
        },
        "audioUrl": {
            "description": "Episode audio URL",
            "type": "string",
            "format": "uri"
        },
        "slug": {
            "description": "Episode URL slug",
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "featured": {
            "description": "Whether this episode is featured on the homepage",
            "type": "boolean"
        }
    },
    "required": [
        "number",
        "title",
        "description",
        "duration",
        "publishDate",
        "coverImageUrl",
        "audioUrl",
        "slug",
        "featured"
    ],
    "additionalProperties": false
}
