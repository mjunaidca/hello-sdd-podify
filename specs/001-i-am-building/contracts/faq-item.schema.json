{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://hello-a-podcast.com/schemas/faq-item.json",
    "title": "FAQ Item",
    "description": "Schema for FAQ item data",
    "type": "object",
    "properties": {
        "question": {
            "description": "FAQ question",
            "type": "string",
            "minLength": 1,
            "maxLength": 160
        },
        "answer": {
            "description": "FAQ answer",
            "type": "string",
            "minLength": 1,
            "maxLength": 2000
        },
        "category": {
            "description": "FAQ category (optional)",
            "type": "string"
        },
        "order": {
            "description": "Display order (optional)",
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "question",
        "answer"
    ],
    "additionalProperties": false
}
